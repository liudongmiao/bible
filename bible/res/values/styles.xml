<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_menu</item>
    </style>

    <style name="progress" parent="Widget.AppCompat.ProgressBar">
    </style>

    <style name="preference" parent="PreferenceThemeOverlay.v14.Material">
    </style>

    <style name="dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="preferenceTheme">@style/preference</item>
        <item name="android:colorBackground">@color/grey_850</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="textColorNormal">?android:attr/textColorPrimary</item>
        <item name="textColorRed">@color/red_dark</item>
        <item name="backgroundHighlight">@color/yellow_dark</item>
        <item name="backgroundSelection">@color/blue_dark</item>
    </style>

    <style name="light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/preference</item>
        <item name="android:colorBackground">@color/grey_50</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="textColorNormal">?android:attr/textColorPrimary</item>
        <item name="textColorRed">@color/red_light</item>
        <item name="backgroundHighlight">@color/yellow_light</item>
        <item name="backgroundSelection">@color/blue_light</item>
    </style>

    <style name="dark.dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="android:colorBackground">@color/grey_850</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="textColorNormal">?android:attr/textColorPrimary</item>
        <item name="textColorRed">@color/red_dark</item>
        <item name="backgroundHighlight">@color/yellow_dark</item>
        <item name="backgroundSelection">@color/blue_dark</item>
    </style>

    <style name="light.dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:colorBackground">@color/grey_50</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="textColorNormal">?android:attr/textColorPrimary</item>
        <item name="textColorRed">@color/red_light</item>
        <item name="backgroundHighlight">@color/yellow_light</item>
        <item name="backgroundSelection">@color/blue_light</item>
    </style>

    <style name="SelectableButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

</resources>
